<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>

<ScrollPane fitToWidth="true" styleClass="scroll-pane" stylesheets="@../../css/style.css" 
            xmlns="http://javafx.com/javafx/21.0.8" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.gui.CreateBookControllerGUI">
    
    <content>
        <VBox spacing="30">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" />
            </padding>
            
            <!-- Contenitore a 2 colonne -->
            <HBox alignment="TOP_LEFT" maxWidth="1200" spacing="40">
                
                <!-- COLONNA SINISTRA: Immagine e selezione -->
                <VBox alignment="TOP_CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefWidth="250.0" spacing="25.0">
                  
                    <!-- Pulsante indietro -->
                    <Button fx:id="backButton" onAction="#handleCancel" styleClass="back-button" 
                            text="← Torna Indietro" />
                    
                    <!-- Area immagine -->
                    <VBox alignment="CENTER" prefHeight="370" prefWidth="250" styleClass="book-cover">
                        <ImageView fx:id="previewImage" fitWidth="250" preserveRatio="true" />
                    </VBox>
                    
                    <!-- Selezione immagine -->
                    <VBox alignment="CENTER" spacing="15.0">
                        <Label styleClass="wishlist-label" text="Seleziona una copertina per il nuovo libro" 
                               wrapText="true" />
                        <Button fx:id="imageButton" alignment="CENTER" onAction="#handleSelectImage" 
                                styleClass="search-button" text="Seleziona Immagine" />
                        <Label fx:id="imageLabel" styleClass="detail-value" 
                               text="Nessuna immagine selezionata" />
                    </VBox>
                </VBox>
                
                <!-- COLONNA DESTRA: Form dettagli libro -->
                <VBox spacing="20" HBox.hgrow="ALWAYS">
                    
                    <!-- Titolo -->
                    <VBox spacing="8">
                        <Label styleClass="page-title" text="Crea Nuovo Libro" />
                        <Separator />
                    </VBox>
                    
                    <!-- Form a griglia -->
                    <GridPane hgap="20.0" vgap="15.0">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="150.0" prefWidth="150.0" />
                            <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="300.0" />
                        </columnConstraints>
                        
                        <!-- Titolo -->
                        <Label text="Titolo:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="detail-label" />
                        <TextField fx:id="titleField" promptText="Inserisci titolo" styleClass="text-field" 
                                   GridPane.rowIndex="0" GridPane.columnIndex="1" />
                        
                        <!-- Autore -->
                        <Label text="Autore:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="detail-label" />
                        <TextField fx:id="authorField" promptText="Inserisci autore" styleClass="text-field" 
                                   GridPane.rowIndex="1" GridPane.columnIndex="1" />
                        
                        <!-- Categoria -->
                        <Label text="Categoria:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="detail-label" />
                        <ComboBox fx:id="categoryCombo" promptText="Seleziona categoria" styleClass="combo-box" 
                                  GridPane.rowIndex="2" GridPane.columnIndex="1" />
                        
                        <!-- Anno -->
                        <Label text="Anno:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="detail-label" />
                        <TextField fx:id="yearField" promptText="es. 2023" styleClass="text-field" 
                                   GridPane.rowIndex="3" GridPane.columnIndex="1" />
                        
                        <!-- Editore -->
                        <Label text="Editore:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="detail-label" />
                        <TextField fx:id="publisherField" promptText="Inserisci editore" styleClass="text-field" 
                                   GridPane.rowIndex="4" GridPane.columnIndex="1" />
                        
                        <!-- Pagine -->
                        <Label text="Pagine:" GridPane.rowIndex="5" GridPane.columnIndex="0" styleClass="detail-label" />
                        <TextField fx:id="pagesField" promptText="es. 320" styleClass="text-field" 
                                   GridPane.rowIndex="5" GridPane.columnIndex="1" />
                        
                        <!-- ISBN -->
                        <Label text="ISBN:" GridPane.rowIndex="6" GridPane.columnIndex="0" styleClass="detail-label" />
                        <TextField fx:id="isbnField" promptText="es. 978-3-16-148410-0" styleClass="text-field" 
                                   GridPane.rowIndex="6" GridPane.columnIndex="1" />
                        
                        <!-- Stock -->
                        <Label text="Stock:" GridPane.rowIndex="7" GridPane.columnIndex="0" styleClass="detail-label" />
                        <TextField fx:id="stockField" promptText="es. 10" styleClass="text-field" 
                                   GridPane.rowIndex="7" GridPane.columnIndex="1" />
                        
                        <!-- Prezzo -->
                        <Label text="Prezzo (€):" GridPane.rowIndex="8" GridPane.columnIndex="0" styleClass="detail-label" />
                        <TextField fx:id="priceField" promptText="es. 19.99" styleClass="text-field" 
                                   GridPane.rowIndex="8" GridPane.columnIndex="1" />
                    </GridPane>
                    
                    <!-- Trama -->
                    <Separator />
                    <VBox spacing="10">
                        <Label styleClass="detail-label" text="Trama:" />
                        <TextArea fx:id="plotArea" prefHeight="120.0" prefWidth="600.0" 
                                  promptText="Inserisci la trama del libro..." styleClass="text-field" 
                                  wrapText="true" />
                    </VBox>
                    
                    <!-- Box pulsanti -->
                    <Separator />
                    <VBox spacing="20" styleClass="action-box">
                        <Label styleClass="action-title" text="Crea il libro" />
                        
                        <HBox alignment="CENTER" spacing="30.0">
                            <Button fx:id="cancelButton" onAction="#handleCancel" styleClass="clear-button" 
                                    text="Annulla" />
                            <Button fx:id="createButton" onAction="#handleCreateBook" styleClass="submit-button" 
                                    text="Crea Libro" />
                        </HBox>
                    </VBox>
                    
                </VBox>
                
            </HBox>
            
        </VBox>
    </content>
</ScrollPane>